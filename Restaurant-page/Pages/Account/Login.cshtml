@page
@model Restaurant_page.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/_RestaurantPagesLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div asp-validation-summary="All" class="loginerror"></div>
<h2>Login</h2>

<div class="login">
    <form method="post" asp-page-handler="Login" class="loginwindow">
        <h2>Use a local account to log in.</h2>

        <div>
            <label asp-for="LoginInput.Email"></label>
            <input asp-for="LoginInput.Email" />
            <span asp-validation-for="LoginInput.Email"></span>
        </div>
        <div>
            <label asp-for="LoginInput.LoginPassword"></label>
            <input asp-for="LoginInput.LoginPassword" />
            <span asp-validation-for="LoginInput.LoginPassword"></span>
        </div>

        <button type="submit" class="loginbutton">Log in</button>
    </form>

    <form method="post" asp-page-handler="Register" class="registerwindow">
        <h2>Not a Member? Register:</h2>

        <div>
            <label asp-for="RegisterInput.RegisterEmail"></label>
            <input asp-for="RegisterInput.RegisterEmail" class="form-control" />
            <span asp-validation-for="RegisterInput.RegisterEmail"></span>
        </div>
        <div>
            <label asp-for="RegisterInput.RegisterPassword"></label>
            <input asp-for="RegisterInput.RegisterPassword" class="form-control" />
            <span asp-validation-for="RegisterInput.RegisterPassword"></span>
        </div>
        <div>
            <label asp-for="RegisterInput.ConfirmregisterPassword"></label>
            <input asp-for="RegisterInput.ConfirmregisterPassword" />
            <span asp-validation-for="RegisterInput.ConfirmregisterPassword"></span>
        </div>
        <button type="submit" class="loginbutton">Register</button>
    </form>
</div>



@page
@model Restaurant_page.Pages.AddMenuItemModel
@{
    ViewData["Title"] = "AddMenuItem";
    Layout = "~/Pages/_RestaurantPagesLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Add Menu Item</h2>

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <div>Name: <input asp-for="MenuItem.Name" /></div>
    <div>Description: <input asp-for="MenuItem.Description" /></div>
    <div>Price: <input asp-for="MenuItem.Price" /></div>
    <div>Image: <br /> <input type="file" name="ItemImage" /><br /></div>
    <button type="submit">Add Item</button>
</form>